---
interface Props {
	title: string;
}

const { title } = Astro.props;

const GITHUB_USERNAME = "Vasie1337";
const response = await fetch(`https://api.github.com/users/${GITHUB_USERNAME}`);
const userData = response.ok ? await response.json() : null;
const favicon = userData?.avatar_url || '/favicon.ico';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Vasie" />
		<meta name="viewport" content="width=device-width" />
		<link 
			rel="icon" 
			href={favicon} 
			type="image/png" 
			sizes="32x32"
			style="border-radius: 50%;"
		/>
		<link 
			rel="mask-icon" 
			href={favicon} 
			color="#000000"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--normal: #ffffff;
		--accent: #2b2b2b;
		--back-ground: #020202;
		--gradient-1: #1a1a1a;
		--gradient-2: #0a0a0a;
		--card-hover: rgba(255, 255, 255, 0.05);
		--glow: rgba(255, 255, 255, 0.1);
	}
	html {
		font-family: system-ui, sans-serif;
		background: linear-gradient(135deg, var(--gradient-1), var(--gradient-2));
		min-height: 100vh;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
